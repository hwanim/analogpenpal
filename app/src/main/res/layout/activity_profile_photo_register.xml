<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.commontalks.analogpenpal.view.ProfilePhotoRegisterActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:elevation="4dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/startActivityToolbar"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_profile_photo_kr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="90dp"
        android:textSize="35sp"
        android:id="@+id/registerProflePhotoTv"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profileInitSetLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >


        <ImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:src="@drawable/ic_sign_up_profile_photo"
            android:layout_gravity="center"
            android:id="@+id/profilePhotoRegister"
            />
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/ic_photo_edit_big"
            />

    </FrameLayout>
    
    <ImageView
        android:layout_width="96dp"
        android:layout_height="41dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="400dp"
        android:src="@drawable/button_skip_kor"
        android:id="@+id/registerProfiePhotoBtn"
        />

</android.support.constraint.ConstraintLayout>
