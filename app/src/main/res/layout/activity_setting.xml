<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.commontalks.analogpenpal.view.SettingActivity">

    <include
        layout="@layout/toolbar_layout"
        android:id="@+id/Settingtoolbar"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/Settingtoolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/icon_noprofile"
        android:layout_marginTop="30dp"
        android:id="@+id/settingProfileImage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settingProfileImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:textSize="21sp"
        android:text="Yeri kim"
        android:id="@+id/settingNameTv"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settingNameTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="9sp"
        android:text="Korea"
        android:id="@+id/settingNationTv"
        />
    
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settingNationTv"
        android:layout_marginTop="60dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="42dp"
                        android:background="@color/colorPrimary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:text="@string/notificationSetting_kr"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        />


                    <Switch
                        android:id="@+id/settingNotificationSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    >

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="42dp"
                        android:background="@color/colorPrimary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:text="@string/termsOfUse_kr"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        />


                    <ImageView
                        android:id="@+id/termsOfUseBtn"
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="40dp"
                        android:src="@drawable/button_setting"


                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    >

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="42dp"
                        android:background="@color/colorPrimary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:text="건의하기"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        />


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="40dp"
                        android:src="@drawable/button_setting"
                        android:id="@+id/sendRequestBtn"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    >

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="42dp"
                        android:background="@color/colorPrimary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:text="만든이들"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        />


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="40dp"
                        android:src="@drawable/button_setting"
                        android:id="@+id/makersBtn"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>
